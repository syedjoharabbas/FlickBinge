{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "users": {
        "ClusterId": "usersCluster",
        "Match": { "Path": "/users/{**catchall}" },
        "Transforms": [
          { "PathRemovePrefix": "/users" }
        ]
      },
      "movies": {
        "ClusterId": "moviesCluster",
        "Match": { "Path": "/movies/{**catchall}" },
        "Transforms": [
          { "PathRemovePrefix": "/movies" }
        ]
      },
      "watchlist": {
        "ClusterId": "watchlistCluster",
        "Match": { "Path": "/watchlist/{**catchall}" },
        "Transforms": [
          { "PathRemovePrefix": "/watchlist" }
        ]
      },
      "recommendations": {
        "ClusterId": "recommendationsCluster",
        "Match": { "Path": "/recommendations/{**catchall}" },
        "Transforms": [
          { "PathRemovePrefix": "/recommendations" }
        ]
      }
    },
    "Clusters": {
      "usersCluster": {
        "Destinations": { "destination1": { "Address": "http://localhost:5003/" } }
      },
      "moviesCluster": {
        "Destinations": { "destination1": { "Address": "http://localhost:5001/" } }
      },
      "watchlistCluster": {
        "Destinations": { "destination1": { "Address": "http://localhost:5004/" } }
      },
      "recommendationsCluster": {
        "Destinations": { "destination1": { "Address": "http://localhost:5004/" } }
      }
    }
  }
}
