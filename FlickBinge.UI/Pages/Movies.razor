@page "/movies"
@inject HttpClient Http
@inject FlickBinge.UI.Services.LocalStorageService Storage
@inject ILogger<Movies> Logger

<h2 class="mb-4 text-light">Movies</h2>

@if (movies == null)
{
    <p class="text-light">Loading movies...</p>
}
else if (movies.Count == 0)
{
    <p class="text-light">No movies found.</p>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
        @foreach (var movie in movies)
        {
            <div class="col">
                <div class="card h-100 bg-dark text-light border-secondary shadow-sm">
                    <img src="@movie.poster" class="card-img-top" alt="@movie.title"
                         style="object-fit: cover; height: 350px;" />
                    <div class="card-body text-center">
                        <h5 class="card-title">@movie.title (@movie.year)</h5>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private List<Movie>? movies;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var token = await Storage.GetItemAsync("accessToken");
            if (!string.IsNullOrEmpty(token))
            {
                // Simple token debugging - just show first/last parts
                Logger.LogDebug("Token length: {Len}", token.Length);
                Logger.LogDebug("Token starts with: {Start}...", token.Substring(0, Math.Min(20, token.Length)));
                Logger.LogDebug("Token ends with: ...{End}", token.Substring(Math.Max(0, token.Length - 20)));

                Http.DefaultRequestHeaders.Authorization =
                    new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token);

                // Make the request and handle response properly
                var response = await Http.GetAsync("http://localhost:5000/movies");
                Logger.LogDebug("Response status: {Status}", response.StatusCode);
                Logger.LogDebug("Response headers: {Headers}", string.Join(", ", response.Headers.Select(h => $"{h.Key}: {string.Join(", ", h.Value)}")));

                if (response.IsSuccessStatusCode)
                {
                    movies = await response.Content.ReadFromJsonAsync<List<Movie>>();
                    Logger.LogInformation("Loaded {Count} movies", movies?.Count ?? 0);
                }
                else
                {
                    var errorContent = await response.Content.ReadAsStringAsync();
                    Logger.LogWarning("Error response: {Error}", errorContent);
                }
            }
            else
            {
                Logger.LogWarning("No token found in storage");
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading movies");
        }
    }

    public class Movie
    {
        public string title { get; set; } = string.Empty;
        public string year { get; set; } = string.Empty;
        public string poster { get; set; } = string.Empty;
        public string imdbID { get; set; } = string.Empty;
    }
}